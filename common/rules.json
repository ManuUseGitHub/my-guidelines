{
    "space-in-parens": [
        "error",
        "always"
    ],
    "semi": [
        "error",
        "always"
    ],
    "quotes": [
        "error",
        "double"
    ],
    "comma-spacing": [
        "error",
        {
            "before": true,
            "after": true
        }
    ],
    "switch-colon-spacing": [
        "error",
        {
            "after": true,
            "before": true
        }
    ],
    "key-spacing": [
        "error",
        {
            "beforeColon": true,
            "afterColon": true
        }
    ],
    "object-curly-spacing": [
        "error",
        "always"
    ],
    "array-bracket-spacing": [
        "error",
        "always"
    ],
    "computed-property-spacing": [
        "error",
        "always"
    ],
    "lines-around-comment": [
        "error",
        {
            "beforeBlockComment": true,
            "beforeLineComment": true,
            "allowBlockStart": false
        }
    ]
}